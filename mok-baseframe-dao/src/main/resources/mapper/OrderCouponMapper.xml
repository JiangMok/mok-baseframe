<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mok.baseframe.dao.OrderCouponMapper">

    <resultMap id="BaseResultMap" type="com.mok.baseframe.entity.OrderCouponEntity">
        <id column="id" property="id" />
        <result column="order_id" property="orderId" />
        <result column="order_no" property="orderNo" />
        <result column="user_coupon_id" property="userCouponId" />
        <result column="coupon_id" property="couponId" />
        <result column="coupon_name" property="couponName" />
        <result column="coupon_type" property="couponType" />
        <result column="discount_amount" property="discountAmount" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <sql id="Base_Column_List">
        id, order_id, order_no, user_coupon_id, coupon_id, coupon_name,
        coupon_type, discount_amount, create_time
    </sql>

    <insert id="insert" parameterType="com.mok.baseframe.entity.OrderCouponEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO order_coupon (
            id,order_id, order_no, user_coupon_id, coupon_id, coupon_name,
            coupon_type, discount_amount
        ) VALUES (
                     #{id},#{orderId}, #{orderNo}, #{userCouponId}, #{couponId}, #{couponName},
                     #{couponType}, #{discountAmount}
                 )
    </insert>

    <select id="selectByOrderId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM order_coupon
        WHERE order_id = #{orderId}
        ORDER BY create_time
    </select>

    <select id="selectByOrderNo" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM order_coupon
        WHERE order_no = #{orderNo}
        ORDER BY create_time
    </select>

    <select id="selectByUserCouponId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM order_coupon
        WHERE user_coupon_id = #{userCouponId}
    </select>

</mapper>