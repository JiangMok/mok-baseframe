<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mok.baseframe.dao.UserMapper">

    <update id="updateUserPwdById" parameterType="com.mok.baseframe.entity.UserEntity">
        UPDATE `sys_user`
        SET `password` = #{password}
        WHERE `id` = #{id}
    </update>
</mapper>